<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Teams</title>
    <script>
      const ROOM_ID = "<%= roomId %>";
      const DisplayName = "<%= displayName %>";
    </script>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      defer
      src="https://unpkg.com/peerjs@1.3.2/dist/peerjs.min.js"
    ></script>
    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <link rel="stylesheet" href="style.css" />
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="script.js" defer></script>
    <style>
      #video-grid {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
      }
      video {
        height: 300px;
        width: 400px;
        object-fit: cover;
        padding: 8px;
      }
    </style>
  </head>
  <body>
    <div class="main">
      <div class="main__left" id = "left">
        <div class="main__videos">
          <div id="video-grid"></div>
        </div>
        <div class="main__controls" style="
        color:#2F5D62;
        ">
          <div class="main__controls__block">
            <div
              onclick="muteUnmute()"
              class="main__controls__button main__mute_button"
            >
              <i class="fas fa-microphone"></i>
              <span>Mute</span>
            </div>
            <div
              onclick="playStop()"
              class="main__controls__button main__video_button"
            >
              <i class="fas fa-video"></i>
              <span>Stop Video</span>
            </div>
          </div>
          <div class="main__controls__block">
            <div class="main__controls__button" onclick="onScreenshare_click()">
              <i class="fad fa-desktop"></i>
              <span>Screenshare</span>
            </div>
            <div class="main__controls__button" onclick="onpClick()">
              <i class="fas fa-user-friends"></i>
              <span>Participants</span>
            </div>
            <div class="main__controls__button" onclick="onChatClick()">
              <i class="fas fa-comment-alt"></i>
              <span>Chat</span>
            </div>
          </div>
          <div class="main__controls__block" onclick="onLeaveClick()">
            <div class="main__controls__button">
              <span class="leave_meeting">Leave Meeting</span>
            </div>
          </div>
        </div>
      </div>
      <div class="main__right" id = "right" style="display:none;">
        <div class="main__header">
          <h6>Chat</h6>
        </div>
        <div class="main__chat_window">
          <ul class="messages" id="messages"></ul>
        </div>
        <div class="main__message_container">
          <input
            id="chat_message"
            type="text"
            placeholder="Type message here..."
          />
        </div>
      </div>
      <div class="main__right" id="participant" style="display:none;">
        <div class="main__header" >
          <h6 id="ph">Participants</h6>
        </div>
        <div class="main__chat_window">
          <ul class="messages" id="p"></ul>
        </div>
      </div>
    </div>
  </body>

<script>
   function onChatClick()
   {
      let prop = document.getElementById("right").style.display;
      if(prop == "none")
      {
         document.getElementById("right").style.display = "";
         document.getElementById("right").style.width = "20%";
      }
      else {
         document.getElementById("right").style.display = "none";
      }
   }
   function onpClick() {
      let prop = document.getElementById("participant").style.display;
      if (prop == "none") {
        document.getElementById("participant").style.display = "";
        document.getElementById("participant").style.width = "20%";
        document.getElementById("ph").innerHTML = `Participants ${pset.size}`;
      }
      else {
        document.getElementById("participant").style.display = "none";
      }
      
    }

   function onLeaveClick()
   {
      location = "/dashboard"
   }

   
</script>
</html>
